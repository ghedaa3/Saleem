<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/htab_maincontent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appbar"
            android:layout_gravity="center"
            android:layout_margin="5dp"

            android:title="المعلومات">


            <RelativeLayout
                android:id="@+id/rel1"
                android:layout_width="wrap_content"
                android:layout_height="526dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp">




                <TextView
                    android:id="@+id/nameSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relImg"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="اسم المستخدم :"
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nameSignUpHin"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relImg"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="80dp"

                    android:layout_marginTop="25dp"



                    android:layout_toLeftOf="@id/nameSignUp"
                    android:hint="اسم المستخدم"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/emailSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameSignUp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="البريد الإلكتروني: "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/emailSignUpHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameSignUpHin"
                    android:layout_marginEnd="60dp"
                    android:layout_marginRight="80dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"

                    android:layout_marginTop="25dp"



                    android:layout_toLeftOf="@id/emailSignUp"
                    android:hint="البريد الالكتروني"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailSignUp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="الوزن:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/wightHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/emailSignUpHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"


                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"

                    android:layout_toLeftOf="@+id/weight"


                    android:hint=" wight  "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/heigh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/weight"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="الطول:   "

                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/heighHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/wightHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"



                    android:layout_toLeftOf="@+id/heigh"


                    android:hint="  height "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/neededCal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heigh"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="السعرات الحرارية:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/neededCalHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/heighHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/neededCal"

                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="80dp"


                    android:hint=" cal "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/neededCal"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="الجنس:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/genderHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/neededCalHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_toLeftOf="@+id/neededCal"
                    android:layout_marginEnd="60dp"
                    android:layout_marginStart="80dp"




                    android:ems="10"

                    android:hint=" gender  "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/gender"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="كتلة الجسم:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bmiHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genderHin"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"


                    android:layout_toLeftOf="@+id/bmi"

                    android:ems="10"

                    android:hint=" bmi  "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bmi"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="العمر:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ageHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bmiHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"



                    android:layout_toLeftOf="@+id/age"

                    android:ems="10"

                    android:hint=" age  "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="المستوى:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/levelHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ageHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"

                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"

                    android:layout_toLeftOf="@+id/level"
                    android:ems="10"

                    android:hint=" level  "
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/goal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/level"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"
                    android:text="الهدف:   "
                    android:textColor="#3F51B5"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/goalHin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/levelHin"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="25dp"

                    android:layout_marginEnd="60dp"

                    android:layout_marginStart="80dp"

                    android:layout_toLeftOf="@+id/goal"
                    android:ems="10"

                    android:hint=" goal  "
                    android:textSize="18dp" />


            </RelativeLayout>





            <Button
                android:id="@+id/reedit_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/rel1"
                android:layout_centerInParent="true"
                android:layout_marginTop="60dp"
                android:backgroundTint="#69F0AE"
                android:background="@drawable/border"
                android:textColor="#C6020000"
                android:text="تعديل الحساب"
              />

            <Button
                android:id="@+id/edit_profile"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:backgroundTint="#341A1818"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:layout_below="@id/reedit_profile"
                android:text="تسجيل الخروج"
                android:textColor="#C6020000" />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/icon_shape_circuler_two"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.ProfileTheme"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginTop="13dp"
            android:backgroundTint="#3F51B5"
            android:gravity="center"
            app:title=" "
            app:titleTextColor="@color/whiteTextColor"

            />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ملفي الشخصي"

        android:textColor="@color/whiteTextColor"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="center" />



</androidx.coordinatorlayout.widget.CoordinatorLayout>