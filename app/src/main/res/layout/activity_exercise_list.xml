<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_centerInParent="true"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:textColor="#4F329A"

            android:layout_height="wrap_content"

            android:text="التمارين"
            android:textStyle="bold"
            android:textSize="40dp"

            >

        </TextView>

        <LinearLayout
            android:id="@+id/beginner"

            android:layout_width="377dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_radus_white"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"

            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"



            >

            <ImageView
                android:layout_width="108dp"
                android:layout_height="89dp"
                android:layout_margin="8dp"
                android:src="@drawable/beginner_medal" />


            <TextView
                android:id="@+id/titleb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="مستوى مبتدى"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="20dp"
                android:textStyle="bold" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/intermediate"


            android:layout_width="377dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_radus_white"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"

            >

            <ImageView
                android:layout_width="108dp"
                android:layout_height="89dp"
                android:layout_margin="8dp"
                android:src="@drawable/interm_medal" />


            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="مستوى متوسط"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/advance"
            android:layout_width="377dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_radus_white"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="108dp"
                android:layout_height="89dp"
                android:layout_margin="8dp"
                android:src="@drawable/advance_medal" />


            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="مستوى متقدم"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="20dp"
                android:textStyle="bold" />


        </LinearLayout>




    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        android:background="@color/colorLightGray"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom='true'  />


    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"></FrameLayout>


</RelativeLayout>
