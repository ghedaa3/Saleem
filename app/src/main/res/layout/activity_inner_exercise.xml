<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".exercise.InnerExercise">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"

            android:id="@+id/title"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:text="تمرين استقامة"/>

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="37dp"
            android:src="@drawable/kk"
            android:tint="@color/gray_btn_bg_pressed_color"></ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/gifRL"
        android:layout_height="300dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/warm_up" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/gifRL"
        android:id="@+id/durationT"
        android:layout_height="wrap_content">



        <TextView

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/description"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginTop="10sp"
            android:textAlignment="center"
            android:text="text"

            android:padding="5dp"
            android:textColor="#FFFFFF"
            />

    </RelativeLayout>

    <Button
        android:id="@+id/start"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/durationT"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:backgroundTint="#69F0AE"
        android:background="@drawable/border"
        android:text="تم الانتهاء"
        android:textSize="20sp"

        android:textColor="#C6020000" />




</RelativeLayout>

