<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.registerThreeActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/register_toolbar"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.ProfileTheme"
            app:elevation="0dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                app:title=" "
                app:titleTextColor="@color/whiteTextColor" />
        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">


            -

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="الخطوة 4/4"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="340dp"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/kk"
                    android:tint="@color/gray_btn_bg_pressed_color">

                </ImageView>

            </RelativeLayout>



            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ما هو هدفك؟"
                android:textAlignment="center"
                android:textColor="#D0565A5A"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/goalOneBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/unclick"
                android:text="خسارة وزن"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/goalTwoBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/unclick"
                android:text="الحفاظ على الوزن"
                android:textColor="#fff"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/goalThreeBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/unclick"
                android:text="زيادة الوزن"
                android:textColor="#fff"
                android:textSize="20dp"

                />



            <Button
                android:id="@+id/startBtn"

                android:layout_width="149dp"
                android:layout_height="67dp"

                android:layout_gravity="center"
                android:layout_marginTop="80dp"

                android:background="@drawable/register_btn"
                android:backgroundTint="#3F51B5"
                android:text="البدأ"
                android:textColor="#F7FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

